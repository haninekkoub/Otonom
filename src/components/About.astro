---
import About01 from "../assets/About_01.png"
import About02 from "../assets/About_02.png"
---

<section class="bg-darkbackground px-[12.5vw] py-16">
        <div class="flex justify-center items-end gap-28 pb-16 relative">
            <div class="w-[30vw] h-[30vw] mt-16 bg-no-repeat bg-cover" style={{ backgroundImage: `url(${About01})` }} />
