---
import LinksAnimation from "./LinksAnimation.astro";
import { Icon } from "astro-icon";

type socialLink = {
  name: string;
  url: string;
};
const RoadMaps: socialLink[] = [
  {
    name: "Projects",
    url: "",
  },
  {
    name: "About Us",
    url: "",
  },
  {
    name: "Services",
    url: "",
  },
  {
    name: "Contact Us",
    url: "",
  },
];
const socialLinks: socialLink[] = [
  {
    name: "Instagram",
    url: "",
  },
  {
    name: "Behance",
    url: "",
  },
  {
    name: "Linkedin",
    url: "",
  },
  {
    name: "Medium",
    url: "",
  },
  {
    name: "Youtube",
    url: "",
  },
  {
    name: "Dribbble",
    url: "",
