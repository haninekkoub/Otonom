<script>
  const first = document.querySelector(".target") as HTMLElement;
  const divs = document.querySelectorAll(".container > div");
  const title = first.querySelector(".title") as HTMLElement;
  const paragraph = first.querySelector(".paragraph") as HTMLElement;

  divs.forEach((div) => {
    div.addEventListener("mouseenter", () => {
      first.style.cssText = "width: 33%; background-color: #F2F2F5;";
      title.style.cssText = " color: #07184F; opacity: .3;";
      paragraph.style.display = "none";
    });

    div.addEventListener("mouseleave", () => {
      first.style.cssText = "width: 65%; background-color: #DA33D0;";
      title.style.cssText = " color: white; opacity: 1;";
      paragraph.style.display = "block";
    });
  });

  first.addEventListener("mouseenter", () => {
    first.style.cssText = "width: 65%; background-color: #DA33D0;";
    title.style.cssText = " color: white; opacity: 1;";
    paragraph.style.display = "block";
  });
</script>
